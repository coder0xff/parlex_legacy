<UserControl xmlns:Controls="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions"  x:Class="IDE.NfaEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="OddGridCellStyle" TargetType="Border">
            <Setter Property="Background" Value="LightBlue"></Setter>
        </Style>
    </UserControl.Resources>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <Button Content ="Arrange" Click="Button_Click" />
            <Button Content="Minimize" Click="Button_Click_1" />
        </StatusBar>
        <Controls:ZoomControl>
            <Grid Name="Grid" ShowGridLines="True" MouseMove="Grid_MouseMove" Background="GhostWhite" MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseLeftButtonUp="Grid_MouseLeftButtonUp" KeyUp="Grid_KeyUp" Focusable="True">
                <Line Name="DrawLine" X1="-1" Y1="-1" X2="-1" Y2="-1" Stroke="LightGreen"  StrokeDashArray="10 10" StrokeThickness="3" Grid.ColumnSpan="1000" Grid.RowSpan="1000" Panel.ZIndex="1000"/>
            </Grid>
        </Controls:ZoomControl>
    </DockPanel>
</UserControl>
